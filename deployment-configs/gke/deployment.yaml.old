apiVersion: apps/v1
kind: Deployment
metadata:
  name: @SERVICE_NAME@
  namespace: @NAMESPACE@
  labels:
    app: @SERVICE_NAME@
spec:
  replicas: 1
  selector:
    matchLabels:
      app: @SERVICE_NAME@
  template:
    metadata:
      labels:
        app: @SERVICE_NAME@
    spec:
      containers:
        - name: @SERVICE_NAME@
          image: @IMAGE_NAME@
          imagePullPolicy: IfNotPresent
          ports:
            - name: react
              containerPort: 3000
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: react
            initialDelaySeconds: 20
            periodSeconds: 3
          readinessProbe:
            httpGet:
              path: /
              port: react
            initialDelaySeconds: 30
            periodSeconds: 2
---
apiVersion: v1
kind: Service
metadata:
  name: @SERVICE_NAME@
  labels:
    app: @SERVICE_NAME@
spec:
  selector:
    app: @SERVICE_NAME@
  ports:
  - protocol: TCP
    port: 80
    targetPort: 3000
  type: NodePort
